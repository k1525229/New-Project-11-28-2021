import java.awt.*;
import javax.swing.*;
public class actionPanel extends JPanel{
	public JButton move;
	public JButton shoreUp;
	public JButton giveCards;
	public JButton getTreasure;
	public JButton leaveIsland;
	public JButton endTurn;
	public JButton specialAction;
	public actionPanel() {
		this.setLayout(new GridLayout(1,7));
		move = new JButton("Move");
		move.setFont(new Font("Arial",Font.PLAIN,30));
		add(move,0,0);
		
		shoreUp = new JButton("ShoreUp");
		shoreUp.setFont(new Font("Arial",Font.PLAIN,30));
		add(shoreUp,0,1);
		
		giveCards = new JButton("Give Cards");
		giveCards.setFont(new Font("Arial",Font.PLAIN,30));
		add(giveCards,0,2);
		
		getTreasure = new JButton("Get Treasure");
		getTreasure.setFont(new Font("Arial",Font.PLAIN,30));
		add(getTreasure,0,3);
		
		leaveIsland = new JButton("Leave Island");
		leaveIsland.setFont(new Font("Arial",Font.PLAIN,30));
		add(leaveIsland,0,4);
		
		endTurn = new JButton("End Turn");
		endTurn.setFont(new Font("Arial",Font.PLAIN,30));
		add(endTurn,0,5);
		
		specialAction = new JButton("Action Card");
		specialAction.setFont(new Font("Arial",Font.PLAIN,30));
		add(specialAction,0,6);
	}
}
